<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <link rel="shortcut icon" href="/images/BotServices.png" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="theme-color" content="#000000" />
  <title>Web Chat Authenticated User Sample</title>
  <script src="https://cdn.botframework.com/botframework-webchat/latest/webchat.js"></script>

  <!-- This is for styling Web Chat for demonstration purposes -->
  <style type="text/css">
    html,
    body {
      background-color: #f7f7f7;
      height: 100%;
    }

    body {
      background-image: url(/images/BotServices-Translucent.svg);
      background-position: 100% 100%;
      background-repeat: no-repeat;
      background-size: auto 50%;
      margin: 0;
    }

    #webchat {
      border-radius: 4px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.08);
      height: calc(100% - 20px);
      left: 10px;
      overflow: hidden;
      position: fixed;
      top: 10px;
      width: 360px;
    }
  </style>
</head>

<body>
  <noscript>You need to enable JavaScript to run this app.</noscript>
  <script>
    (async function main() {
        // DirectLine token will be inserted here by the backend before rendering this template
        const dlToken = '<%= dlToken %>';

        // Create div element and render WebChat in it
        const webChatElement = document.createElement('div');
        webChatElement.id = 'webchat';
        window.WebChat.renderWebChat(
          {
            directLine: WebChat.createDirectLine({ token: dlToken }),
            styleOptions: {
              backgroundColor: 'rgba(255, 255, 255, .8)',
            },
            // username: 'Web Chat User',
          },
          webChatElement,
        );

        document.documentElement.append(webChatElement);
    })().catch(err => console.error(err));
  </script>
</body>

</html>